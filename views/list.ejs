  <%- include('header'); -%>

  
    <div class="box" id="heading">
        <h2>
            <%= today_day %>
        </h2>
    </div>

    <div class="box">

        <% for(var i=0; i< itemslist.length; i++){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="check" value="<%=itemslist[i]._id%>" onChange="this.form.submit()">
                    <p>
                        <%= itemslist[i].itemName %>
                    </p>
                </div>
            </form>
            <% } %>

                <form action="/" method="post" class="item">
                    <input type="text" name="nameit" placeholder="Add New item" autocomplete="off">
                    <button type="submit">+</button>
                </form>
    </div>

    <%- include('footer'); -%>